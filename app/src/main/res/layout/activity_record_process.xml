<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecordProcess">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="506dp">

        <ImageView
            android:id="@+id/msx_image"
            android:layout_width="match_parent"
            android:layout_height="506dp"
            android:contentDescription="image with IR and visual data mixed" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="506dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/feetmack" />

        <Chronometer
            android:id="@+id/itimer"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:format="%s"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/photoCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="capture"
            android:text="@string/photo_capture" />

        <Button
            android:id="@+id/videoRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="video2"
            android:text="@string/video_record" />

    </LinearLayout>

</LinearLayout>